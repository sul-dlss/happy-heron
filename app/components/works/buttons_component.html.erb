<div class="row justify-content-between">
  <div class="col-auto">
    <% if first_draft? %>
      <%= link_to model, method: :delete, aria: { label: "Delete #{title}" }, data: { confirm: "Are you sure you want to delete this draft work? It cannot be undone." } do %>
        <span class="btn btn-primary"><span class="far fa-trash-alt"></span> Discard draft</span>
      <% end %>
    <% elsif version_draft? %>
      <%= link_to work_version, method: :delete, aria: { label: "Delete #{title}" }, data: { confirm: "Are you sure you want to revert to the previously published version? It cannot be undone." } do %>
        <span class="btn btn-primary"><span class="far fa-trash-alt"></span> Discard draft</span>
      <% end %>
    <% end %>
  </div>
  <div class="col-auto">
    <%= cancel_button %>
    <%= form.submit 'Save as draft', class: 'btn btn-primary', id: 'save-draft-button' %>
    <%= form.submit submit_button_label, class: 'btn btn-primary' %>
  </div>
</div>
