<div data-controller="available-date">
  <div class="mb-3 row">
    <div class="col-sm-10 release-option">
      <%= form.radio_button :release, 'immediate', class: 'form-check-input',
                            data: { action: 'available-date#immediate', available_date_target: 'immediate' } %>
      <%= form.label :release_immediate, 'Immediately once deposit is completed' %>
    </div>
  </div>

  <div class="embargo-date mb-5" data-edit-deposit-target="embargo-dateField">
    <div class="row<%= ' is-invalid' if error? %>">
      <div class="col-sm-10 release-option">
        <%= form.radio_button :release, 'embargo', class: 'form-check-input', data: { action: 'available-date#embargo' }  %>
        <%= form.label :release_embargo, 'On this date' %>

        <div class="year">
          <label for="work_embargo_year" class="visually-hidden">Embargo year</label>
          <%= year_field %>
        </div>

        <div class="month">
          <label for="work_embargo_month" class="visually-hidden">Embargo month</label>
          <%= month_field %>
        </div>

        <div class="day">
          <label for="work_embargo_day" class="visually-hidden">Embargo day</label>
          <%= day_field %>
        </div>
      </div>
    </div>
    <div class="invalid-feedback"><%= error_message %></div>
  </div>
</div>
