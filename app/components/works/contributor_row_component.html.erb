<div class="row inner-container" data-controller="contributors" data-contributors-required-value="false"">
  <div class="col-md-12">
    <% if not_first_contributor? %>
      <%= button_tag type: 'button', class: 'btn btn-sm float-end', aria: { label: 'Remove' },
                     data: { action: "click->nested-form#removeAssociation" } do %>
        <span class="far fa-trash-alt"></span>
      <% end %>
      <%= form.hidden_field :_destroy %>
    <% end %>
  </div>
  <div class="col-md-3">
    <%= form.label :role_term, role_term_label, class: 'form-label' %>
    <%= render PopoverComponent.new key: 'work.role_term' %>
    <%= select_role %>
  </div>
  <div class="col-md-1 role-prefix">
    is
  </div>
  <div class="col-md-4" data-contributors-target="personName">
      <%= form.label :first_name, first_name_label, class: 'form-label' %>
    <%= render PopoverComponent.new key: 'work.first_name' %>
    <%= form.text_field :first_name, html_options('personNameInput', 'contributorFirst') %>
    <div class="invalid-feedback">You must provide a first name</div>
  </div>
  <div class="col-md-4" data-contributors-target="personName">
    <%= form.label :last_name, last_name_label, class: 'form-label' %>
    <%= form.text_field :last_name, html_options('personNameInput', 'contributorLast') %>
    <div class="invalid-feedback">You must provide a last name</div>
  </div>
  <div class="col-md-8" data-contributors-target="organizationName">
    <%= form.label :full_name, 'Organization Name *', class: 'form-label' %>
    <%= render PopoverComponent.new key: 'work.organization' %>
    <%= form.text_field :full_name, html_options('organizationNameInput', 'contributorOrg') %>
    <div class="invalid-feedback">You must provide a name</div>
  </div>
</div>
