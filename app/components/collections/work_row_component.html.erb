<tr>
  <%= render Works::LinkToShowComponent.new(work_version:) %>
  <td>
    <%= helpers.turbo_frame_tag dom_id(work, :edit), src: edit_button_work_path(work), target: '_top' %>
    <%= helpers.turbo_frame_tag dom_id(work, :delete), src: delete_button_work_path(work), target: '_top' %>
  </td>
  <td><%= work.owner.sunetid %></td>
  <td><%= render Works::StateDisplayComponent.new(work_version:) %></td>
  <td><%= work.updated_at.strftime('%b %e, %Y') %></td>
  <td><%= attached_files.size %></td>
  <td><%= size %></td>
  <td><%= link_to work.purl, work.purl if work.purl %></td>
  <td><%= render CitationComponent.new(work_version:) %></td>
</tr>
