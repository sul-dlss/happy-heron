<table class="table table-sm mb-5 caption-header">
  <caption>Release and visibility
    <%= helpers.turbo_frame_tag dom_id(collection, :edit_release_details),
                                src: edit_link_collection_path(collection,
                                       ref: 'release_details',
                                       label: 'Edit release options'),
                                target: '_top' %>
  </caption>
  <tbody>
    <tr>
      <th class="col-3">Release</th>
      <td><%= release_info %> </td>
    </tr>
    <tr>
      <th class="col-3">Visibility</th>
      <td><%= access %></td>
    </tr>
    <tr>
      <th>DOI assignment</th>
      <td><%= doi_assignment %></td>
    </tr>
  </tbody>
</table>
