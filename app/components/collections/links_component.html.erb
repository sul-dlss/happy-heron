<table class="table table-sm mb-5 caption-header">
  <caption>Links to related information
    <%= helpers.turbo_frame_tag dom_id(collection_version, :edit_links),
          src: edit_link_collection_version_path(
            collection_version,
            ref: "links",
            label: "Edit links to related information"
          ),
          target: "_top" %>

  </caption>
  <tbody>
    <tr>
      <th class="col-3" scope="row">Related links</th>
      <% if related_links.empty? %>
        <td>None provided</td>
      <% else %>
        <td>
          <% related_links.each do |link| %>
            <p><%= link_to link.link_title, link.url %></p>
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
