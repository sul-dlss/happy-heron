<table class="table table-sm mb-5 caption-header">
  <caption>Review workflow
    <%= helpers.turbo_frame_tag dom_id(collection, :edit_review),
                                src: edit_link_collection_path(collection,
                                                               ref: 'review',
                                                               label: 'Edit review workflow'),
                                target: '_top' %>
  </caption>
  <tbody>
    <tr>
      <th class="col-3">Status</th>
      <td><%= review_workflow_status %></td>
    </tr>
    <tr>
      <th class="col-3">Reviewers</th>
      <td><%= reviewers %></td>
    </tr>
  </tbody>
</table>
