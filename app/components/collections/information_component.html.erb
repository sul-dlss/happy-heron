<table class="table table-sm mb-5 caption-header">
  <caption>Collection information</caption>
  <tbody>
    <tr>
      <th class="col-3">PURL</th>
      <td>
        <% if purl %>
          <%= link_to purl, purl %>
        <% else %>
          <em>Link will become available once the collection has been deposited.</em>
        <% end %>
      </td>
    </tr>
    <tr>
      <th class="col-3">Version details</th>
      <td><%= version %></td>
    </tr>
    <tr>
      <th class="col-3">Created by</th>
      <td><%= creator.sunetid %></td>
    </tr>
    <tr>
      <th class="col-3">Collection created</th>
      <td><%= created %></td>
    </tr>
  </tbody>
</table>
