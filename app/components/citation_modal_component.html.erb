<div class="modal fade" id="citationModal" tabindex="-1" aria-labelledby="citationModalHeader" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="citationModalHeader">Copy citation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body" data-controller="clipboard">
        <div id="citationValue" data-clipboard-target="value">
        </div>
        <button data-action="clipboard#copy" class="mt-5 me-3 float-end btn btn-outline-primary">Copy citation <span class="fa-solid fa-copy" aria-hidden="true"></span></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
