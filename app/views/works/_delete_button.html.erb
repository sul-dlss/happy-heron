<%= turbo_frame_tag dom_id(work, :delete) do %>
  <% if allowed_to?(:delete?, work) %>
    <%= link_to work_path(work), method: :delete, aria: { label: "Delete #{work.title}" }, data: { confirm: "Are you sure you want to delete this draft work? It cannot be undone." } do %>
      <% if params[:style] == 'button' %>
        <span class="btn btn-primary"><span class="far fa-trash-alt"></span> Discard draft</span>
      <% else %>
        <span class="far fa-trash-alt"></span>
      <% end %>
    <% end %>
  <% end %>
<% end %>
