<% content_for :breadcrumbs do %>
  <%= render BreadcrumbNavComponent.new(
    breadcrumbs: [ { title: @work.collection.name, link: collection_path(@work.collection) },
                   { title: @work.title } ]) %>
<% end %>

<% cache [current_user, @work] do %>
  <style>
    <% if current_user != @work.depositor %>
      .visible-to-depositor {
        display: none;
      }
    <% end %>
  </style>
<% end %>

<div class="container" id="work">
  <%= render Works::ApprovalComponent.new(work: @work) %>
  <%= turbo_stream_from @work %>
  <%= render @work %>
</div>
