  <%= render BreadcrumbNavComponent.new(
    breadcrumbs: [ { title: DepositTitlePresenter.show(@form.collection.head), link: collection_path(@form.collection) },
                   { title: @form.title, link: work_path(@form) },
                   { title: 'Edit', omit_title: true } ])
  %>
<% end %>
<main class="mb-3 mb-md-5" id="content">
  <div class="container px-4 px-md-3">
    <%= render Works::FormComponent.new(work_form: @form) %>
  </div>
</main>
