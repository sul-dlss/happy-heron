<turbo-frame id='workAdminSection'>
  <%= form_with url: locks_path(params[:id]), method: :put, data: { turbo: false } do |form| %>
    <% if @work.locked %>
        Unlocking this item will allow the depositor to make changes to this item. You may relock this item in the future.
        <fieldset>
            <%= hidden_field_tag :change_lock_status, false %>
            <%= form.submit 'Unlock', class: 'btn btn-primary mt-3' %>
        </fieldset>
    <% else %>
        Locking this item will prevent anyone from making changes to this item. You may unlock this item if you need to.
        <fieldset>
            <%= hidden_field_tag :change_lock_status, true %>
            <%= form.submit 'Lock', class: 'btn btn-primary mt-3' %>
        </fieldset>
    <% end %>
  <% end %>
</turbo-frame>
