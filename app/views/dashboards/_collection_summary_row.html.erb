<tr id="<%= dom_id(work) %>">
  <%= render Works::LinkToShowComponent.new(work_version: work.head) %>
  <td>
    <%= turbo_frame_tag dom_id(work, :edit), src: edit_button_work_path(work), target: '_top' %>
    <%= turbo_frame_tag dom_id(work, :delete), src: delete_button_work_path(work) %>
  </td>
  <td><%= render Works::StateDisplayComponent.new(work_version: work.head) %></td>
  <td class="visible-to-reviewer-<%= work.collection.id %>"><%= work.depositor.sunetid %></td>
  <td><%= render LocalTimeComponent.new(datetime: work.updated_at, show_time: false) %></td>
  <td>
    <% if work.purl %>
      <%= link_to work.purl, work.purl %>
      <a class="copy-button" data-controller="copy" data-copy-clip-value="<%= work.purl %>" data-action="copy#copy" aria-label="Copy persistent link" href=""><span class="fas fa-copy"></span></a>
    <% end %>
  </td>
  <td><%= render CitationComponent.new(work_version: work.head) %></td>
</tr>
